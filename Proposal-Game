<script>
    document.getElementById('sim').addEventListener('click', function() {
        document.getElementById('message').innerText = 'Parab√©ns, estamos namorando!';
        document.getElementById('sim').style.display = 'none';
        document.getElementById('nao').style.display = 'none';
    });

    document.getElementById('nao').addEventListener('click', function() {
        var width = window.innerWidth - 100; // Limita a posi√ß√£o X para a largura da tela
        var height = window.innerHeight - 100; // Limita a posi√ß√£o Y para a altura da tela
        var randomX = Math.random() * width; // Gera uma posi√ß√£o aleat√≥ria X
        var randomY = Math.random() * height; // Gera uma posi√ß√£o aleat√≥ria Y

        // Move o bot√£o "N√£o" dentro da √°rea vis√≠vel da tela
        document.getElementById('nao').style.position = 'absolute';
        document.getElementById('nao').style.left = randomX + 'px';
        document.getElementById('nao').style.top = randomY + 'px';
    });
</script>

